<aura:component implements="force:appHostable">
  <aura:attribute name="headerTitle" type="String" default="Person View"></aura:attribute>
  <aura:attribute name="headerTitleId" type="String" default="person"></aura:attribute>

    <div class="container">
    <lightning:layout multipleRows="true">
        <lightning:layoutItem size="12">
          <c:CTHeathHeader headerTitle="{!v.headerTitle}" headerTitleId="{!v.headerTitleId}" aura:id="heathheadercomp"/>
    </lightning:layoutItem>
<lightning:layoutItem size="12">
    <lightning:tabset onselect="{!c.tabSelectHandler}" variant="vertical" >
        <lightning:tab label="Person View" id="person">

        <lightning:layout>
          <lightning:layoutItem size="8">
            <c:CTRecentChanges scope="person"/>
          </lightning:layoutItem>
          <lightning:layoutItem size="4">
            <c:CTPersonView/>
        </lightning:layoutItem>
         </lightning:layout>
          
        </lightning:tab>
        <lightning:tab label="Location View" id="location">

           <lightning:layout>
            <lightning:layoutItem size="8">
              <c:CTRecentChanges scope="location"/>
            </lightning:layoutItem>
            <lightning:layoutItem size="4">
              <c:CTLocationView/>
          </lightning:layoutItem>
           </lightning:layout>
          
        </lightning:tab>
    </lightning:tabset>
</lightning:layoutItem>
    </lightning:layout>     
</div>
</aura:component>	
